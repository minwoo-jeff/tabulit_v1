                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div id="serial_container">
                            {% for serial in serials %}
                                <div class="col-lg-4 {{serial.category}}" style="width:300px; margin: 25px;">
                                    <div class="story">
                                        
                                        <div class="story-box">
                                            
                                            <a href="{{path('_volumes_page', {'serial_id':serial.id})}}">
                                            {% if serial.filepath is not null %}
                                                <img src="{{asset('bundles/app/uploads/' ~ serial.filepath) }}" class="img-responsive" alt="">
                                           
                                            {% else %}
                                                <img src="http://placehold.it/270x300" class="img-responsive" alt="">   
                                            {% endif %}
                                            </a>

                                            <div class="story-box-caption">
                                                <div class="story-box-caption-content">
                                                    <div class="story-title">
                                                        <h2>{{serial.title}}</h2>
                                                    </div>
                                                    <div class="story-author">

                                                        {% set writer = serial.writtenBy %}
                                                        <h3>{% if writer is not null %}{{writer.fullName}}{% endif %}</h3>
                                                    </div>
                                                    <div class="story-desc">
                                                        <p>
                                                            {{serial.description}} </p>
                                                    </div>
                                                    <div class="story-star">
                                                    </div>

                                                    <a href="{{path('_volumes_page', {'serial_id':serial.id})}}"><button class="btn btn-primary" type="button">READ</button></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="story-info">
                                        <h3 class="title"><a id="story-info" href="{{path('_volumes_page', {'serial_id':serial.id})}}">{{serial.title}}</a></h3>
                                        <h3 class="author">{% if writer is not null %}{{writer.fullName}}{% endif %}</h3>
                                        </a>
                                    </div>
                                

                                </div>
                            
                            {% endfor %}
                        </div>
                    </div>
