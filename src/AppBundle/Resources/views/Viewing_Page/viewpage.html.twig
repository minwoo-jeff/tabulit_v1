            {% block main %}
                <main>
                     <div class="row">
                        <div class="col-lg-12">
                            <div class="main-heading">
                                {% block heading %}
                                <h1>Today's Stories</h1>
                                {% endblock %}
                                    {#
                                     <div class="dropdown pull-right">
                                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><span id="dropdown_heading">All Stories</span>
                                            <span class="caret"></span></button>
                                        <ul class="dropdown-menu">
                                            <li><a href="#" id="today">Today</a></li>
                                            <li><a href="#" id="week">This week</a></li>
                                            <li><a href="#" id="month">This month</a></li>
                                            <li><a href="#" id="year">This year</a></li>
