        {% endblock %}

        {% block add_javascripts %}
            <script>
                $('.dropdown-menu li a').click(
                        function (e) {
                            e.preventDefault();
                            var that = this,
                                    $that = $(that),
                                    id = that.id,
                                    container = $('#serial_container'),
                                    today = $('.today');
                            week = $('.week');
                            month = $('.month');
                            year = $('.year');
                            if (id == 'today') {
                                container.find(today).show();
                                container.find('.col-lg-4').not(today).hide();
                                $('.dropdown').find('#dropdown_heading').html('Today');
                            }
                            if (id == 'week') {
                                container.find(week).show();
                                container.find('.col-lg-4').not(week).hide();
                                $('.dropdown').find('#dropdown_heading').html('This Week');
                            }
                            if (id == 'month') {
                                container.find(month).show();
                                container.find('.col-lg-4').not(month).hide();
                                $('.dropdown').find('#dropdown_heading').html('This Month');
                            }
                            if (id == 'year') {
                                container.find(year).show();
                                container.find('.col-lg-4').not(year).hide();
                                $('.dropdown').find('#dropdown_heading').html('This Year');
                            }
                        }
                )

            </script>
        {% endblock %}

